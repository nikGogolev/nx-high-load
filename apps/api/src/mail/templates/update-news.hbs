<table>
  <tr>
    <td>Название</td>
    {{#if this.titleUpdated}}
    <td><span style="text-decoration: line-through;">{{this.oldNews.title}}</span><span>{{this.newNews.title}}</span></td>
    {{else}}
    <td><span>{{this.oldNews.title}}</span></td>
    {{/if}}
  </tr>
  <tr>
    <td>Описание</td>
    {{#if this.descriptionUpdated}}
    <td><span style="text-decoration: line-through;">{{this.oldNews.description}}</span><span>{{this.newNews.description}}</span></td>
    {{else}}
    <td><span>{{this.oldNews.description}}</span></td>
    {{/if}}
  </tr>
  <tr>
    <td>Автор</td>
    <td>{{oldNews.author}}</td>
  </tr>
  <tr>
    <td>Дата создания</td>
    <td>{{oldNews.date}}</td>
  </tr>
  <tr>
    <td>Ссылка на новость</td>
    <td>
      <a href='http://localhost:3000/news/{{oldNews.id}}'>
        http://localhost:3000/news/{{oldNews.id}}
      </a>
    </td>
  </tr>
</table>